<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_7sdp"
    android:layout_marginLeft="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/scale_2dp">


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="@dimen/_10sdp"
            >

            <com.jio.jioinfra.custom.TextViewLight
                android:id="@+id/txt_siteid_title"
                android:layout_width="wrap_content"
                android:layout_weight="2.8"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"

                android:text="Site ID: "
                android:textColor="@color/blue_text"
                app:layout_constraintStart_toStartOf="parent"/>


            <com.jio.jioinfra.custom.TextViewLight
                android:id="@+id/txt_siteid_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center"
                android:drawableRight="@drawable/ic_right_arrow"
                app:layout_constraintTop_toTopOf="parent"
                android:text="2"
                android:textColor="@color/blue_text"
                app:layout_constraintLeft_toRightOf="@+id/txt_siteid_title"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>