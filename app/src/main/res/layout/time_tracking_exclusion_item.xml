<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/scale_10dp"
    app:layout_constraintTop_toBottomOf="@+id/txt_jobrole_title">


    <com.jio.jioinfra.custom.TextViewMedium
        android:id="@+id/txt_resource_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_10dp"
        android:paddingLeft="@dimen/scale_5dp"
        android:textColor="@color/txt_grey_color"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jio.jioinfra.custom.TextViewMedium
        android:id="@+id/txt_excluded_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_10dp"
        android:layout_marginRight="@dimen/scale_15dp"
        android:paddingLeft="@dimen/scale_5dp"
        android:textColor="@color/txt_grey_color"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

