    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cnstrntL_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_approve"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:layout_marginTop="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_16dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            app:cardBackgroundColor="@color/acknowladge_back"
            app:cardCornerRadius="@dimen/scale_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.jio.jioinfra.custom.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:paddingTop="@dimen/scale_2dp"
                android:paddingBottom="@dimen/scale_4dp"
                android:text="@string/approve"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_reject"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/scale_16dp"
            android:layout_marginTop="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_16dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            app:cardBackgroundColor="@color/red_color_code"
            app:cardCornerRadius="@dimen/scale_10dp"
            app:layout_constraintLeft_toRightOf="@+id/card_approve"
            app:layout_constraintTop_toTopOf="parent">

            <com.jio.jioinfra.custom.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:paddingTop="@dimen/scale_2dp"
                android:paddingBottom="@dimen/scale_4dp"
                android:text="@string/reject"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <com.jio.jioinfra.custom.TextViewMedium
            android:id="@+id/txt_view_similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/scale_12dp"
            android:paddingBottom="@dimen/scale_4dp"
            android:text="@string/view_similar"
            android:visibility="gone"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.jio.jioinfra.custom.TextViewMedium
            android:id="@+id/txt_request_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_12dp"
            android:text=""
            android:textColor="@color/dcb_grey_txt_color"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jio.jioinfra.custom.TextViewMedium
        android:id="@+id/txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scale_16dp"
        android:layout_marginTop="@dimen/scale_16dp"
        android:text=""
        android:textColor="@color/blue_text"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnstrntL_buttons" />

    <com.jio.jioinfra.custom.TextViewMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_10dp"
        android:text=""
        android:textSize="@dimen/text_size_small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnstrntL_buttons" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cnstrntL_approval_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cnstrntL_sd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/cnstrntL_ed"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.jio.jioinfra.custom.TextViewMedium
                android:id="@+id/txt_start_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lmargin_15"
                android:gravity="center"
                android:paddingTop="@dimen/scale_10dp"
                android:text="@string/start_date"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_so_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.jio.jioinfra.custom.TextViewLight
                android:id="@+id/txt_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/scale_10dp"
                android:text=""
                android:textColor="@color/dcb_grey_txt_color"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_start_date_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cnstrntL_ed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/cnstrntL_grp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cnstrntL_sd"
            app:layout_constraintTop_toTopOf="parent">


            <com.jio.jioinfra.custom.TextViewMedium
                android:id="@+id/txt_end_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lmargin_15"
                android:gravity="center"
                android:paddingTop="@dimen/scale_10dp"
                android:text="@string/end_date"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_so_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.jio.jioinfra.custom.TextViewLight
                android:id="@+id/txt_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/scale_10dp"
                android:text=""
                android:textColor="@color/dcb_grey_txt_color"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_end_date_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cnstrntL_grp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/cnstrntL_justification"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cnstrntL_ed"
            app:layout_constraintTop_toTopOf="parent">


            <com.jio.jioinfra.custom.TextViewMedium
                android:id="@+id/txt_risk_analysis_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lmargin_15"
                android:gravity="center"
                android:paddingTop="@dimen/scale_10dp"
                android:text="@string/group"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_so_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--<com.jio.jioinfra.custom.TextViewLight
                android:id="@+id/txt_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/scale_10dp"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/dcb_grey_txt_color"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_group_title" />-->


            <com.jio.jioinfra.custom.TextViewMedium
                android:id="@+id/txt_group_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/scale_10dp"
                android:text="@string/viewdetails"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/text_size_so_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_risk_analysis_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cnstrntL_justification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cnstrntL_grp"
            app:layout_constraintTop_toTopOf="parent">


            <com.jio.jioinfra.custom.TextViewMedium
                android:id="@+id/txt_justification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lmargin_15"
                android:gravity="center"
                android:paddingTop="@dimen/scale_10dp"
                android:text="Justification"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_so_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.jio.jioinfra.custom.TextViewLight
                android:id="@+id/txt_justification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:paddingTop="@dimen/scale_10dp"
                android:text=""
                android:textColor="@color/dcb_grey_txt_color"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_justification_title" />





        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.jio.jioinfra.custom.TextViewMedium
        android:id="@+id/txt_justification_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_10dp"
        android:visibility="gone"
        android:paddingLeft="@dimen/scale_10dp"
        android:paddingRight="@dimen/scale_5dp"
        android:text=""
        android:textSize="@dimen/text_size_small"
        app:layout_constraintTop_toBottomOf="@+id/cnstrntL_approval_data" />


    <com.jio.jioinfra.custom.TextViewMedium
        android:id="@+id/txt_justification_view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/scale_10dp"
        android:paddingRight="@dimen/scale_10dp"
        android:text="@string/viewdetails"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/text_size_so_small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_justification_details" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_grp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/txt_total_coun1"
        android:paddingRight="@dimen/scale_5dp"
        android:paddingBottom="@dimen/scale_10dp"
        android:visibility="gone"
        android:layout_margin="@dimen/scale_5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_justification_view_details"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />





</androidx.constraintlayout.widget.ConstraintLayout>