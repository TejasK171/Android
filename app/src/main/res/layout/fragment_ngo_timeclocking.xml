    <com.jio.jioinfra.custom.TextViewMedium
        android:id="@+id/txt_time_sheet_clocking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team - Time Sheet Clocking"
        android:textColor="@color/black"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_below="@+id/lnr_timeclocking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:visibility="visible"

        android:layout_below="@+id/txt_time_sheet_clocking"
        android:layout_height="match_parent">
        <com.jio.jioinfra.custom.TextViewMedium
            android:id="@+id/txt_delinquent_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delinquency"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/white_rounded_corner_bg"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/delingentList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@+id/txt_delinquent_title"

            ></androidx.recyclerview.widget.RecyclerView>
