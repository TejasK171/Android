            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:gravity="center"
            android:maxLines="3"
            android:text="MU-MUUM-JCP-001x"
            android:textColor="@color/button_bg_color"
            android:textSize="@dimen/_10sdp"
            android:textStyle="normal" />

        <View
            android:id="@+id/view1"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/txt_siteId"
            android:background="@color/black"

            tools:ignore="MissingConstraints" />


        <com.jio.jioinfra.custom.TextViewLight
            android:id="@+id/txt_job_owner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/call_img_id"
            android:layout_toRightOf="@+id/view1"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="4"

            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="Coming Soon.."
            android:textColor="@color/txt_grey_color"
            android:textSize="@dimen/_10sdp"></com.jio.jioinfra.custom.TextViewLight>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/call_img_id"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"

            android:layout_weight="1"
            app:srcCompat="@drawable/ic_call"


            >

        </androidx.appcompat.widget.AppCompatImageView>

    </LinearLayout>

    <View
